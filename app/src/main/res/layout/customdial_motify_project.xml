            <EditText
                android:id="@+id/dial_development_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="개발기간" />

            <EditText
                android:id="@+id/people_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="모집 인원" />

        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="#사용기술"
          />

        <EditText
            android:id="@+id/dial_ability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="사용기술" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="#프로젝트 내용"
             />

        <EditText
            android:id="@+id/dial_project_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="프로젝트 내용" />


    </LinearLayout>

